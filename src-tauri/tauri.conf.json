{
  "$schema": "https://schema.tauri.app/config/2",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "InvoiceMergeAssistant",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "all": false,
        "readDir": true,
        "scope": ["**"]
      },
      "dialog": {
        "open": true,
        "save": true
      },
      "path": {
        "all": true
      },
      "shell": {
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.masterconcept.invoicemerge",
      "icon": [
        "icons/icon.icns",
        "icons/icon.ico",
        "icons/icon.png"
      ],
      "macOS": {
        "minimumSystemVersion": "10.15"
      }
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "label": "main",
        "title": "Master Concept 发票合并助手",
        "width": 1000,
        "height": 850,
        "resizable": true
      }
    ]
  }
}
